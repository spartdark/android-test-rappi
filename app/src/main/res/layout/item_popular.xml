<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/ic_baseline_wallpaper_24px"
                   android:contentDescription="TODO"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      tools:text="TITULO"
                      android:id="@+id/txtViewPopularTittle"
                      android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      tools:text="Subtitulo 1"
                      android:id="@+id/txtViewPopularSubTittle1"
                      android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      tools:text="Subtitulo 2"
                      android:id="@+id/txtViewPopularSubTittle2"
                      android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>